# =============================================================================
# CONTENT MACHINE v2
# =============================================================================

# Gemini API (text generation)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-lite

# News Sources
NEWS_API_KEY=your_newsapi_key_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Database
# Local: leave empty (uses SQLite)
# Railway: auto-set by PostgreSQL plugin
DATABASE_URL=

# Dashboard auth (optional)
DASHBOARD_SECRET=

# Runtime toggles
DRY_RUN=false

# Google Sheets export (optional)
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_SHEET_NAME=Drafts
# Service account JSON file path or base64 content (use ONE of these)
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_SERVICE_ACCOUNT_JSON_B64=

# Trend digest override (optional)
TREND_DIGEST_CHAT_ID=

# Environment
ENVIRONMENT=development
